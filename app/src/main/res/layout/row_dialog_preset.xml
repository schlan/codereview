<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/row_dialog_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/row_dialog_comment_delete"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:textStyle="normal"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="asdfa dfasdfas jkdfasjk dfasjkd aklsd flsakdflks lasfk asklf kal flkasj flkf "/>


    <ImageView
        android:id="@+id/row_dialog_comment_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete"
        android:clickable="true"
        android:scaleType="center"
        android:layout_marginLeft="16dp"
        android:foreground="?android:attr/selectableItemBackground"/>

</RelativeLayout>