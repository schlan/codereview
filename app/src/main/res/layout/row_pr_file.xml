<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="14dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="14dp"
    android:background="@color/bg_white"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/row_pr_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="start"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginRight="90dp"
                tools:text="Bla bla bla bl asdf jasdlkf aksdfj akdfj akjdf akjdf kasldjf lkasjd flkaj dflkasdj flka fdlka"
                />

            <TextView
                android:id="@+id/row_pr_file_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="12d"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/row_pr_file_repo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/row_pr_file_user"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Second line ver asldkjf afja dklf jalksdj faklsj dlaks aklsd kla skla d"
                />

            <TextView
                android:id="@+id/row_pr_file_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="\@avatar"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>